

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php72” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php72 .php .php7 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

# ---------- أساسيات ----------

DirectoryIndex index.php index.html

# امنع تعارض MultiViews
Options -MultiViews

RewriteEngine On
RewriteBase /

# --- (1) توحيد الروابط: حوّل الامتدادات إلى روابط نظيفة (لازم تكون أولاً) ---

# /index.php → /
RewriteCond %{THE_REQUEST} \s/+index\.php[?\s] [NC]
RewriteRule ^index\.php$ / [R=301,L]

# /something.php → /something
RewriteCond %{THE_REQUEST} \s/+(.+)\.php[?\s] [NC]
RewriteRule ^(.+)\.php$ /$1 [R=301,L]

# /something.html → /something
RewriteCond %{THE_REQUEST} \s/+(.+)\.html[?\s] [NC]
RewriteRule ^(.+)\.html$ /$1 [R=301,L]

# --- (2) مرّر أي ملف/مجلد موجود كما هو ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- (3) تشغيل الملفات داخليًا بدون امتداد ---
# /something → internally → /something.php (لو الملف موجود)
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+?)/?$ $1.php [L]